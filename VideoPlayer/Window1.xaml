<Window x:Class="VideoPlayer.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" 
    xmlns:ax="clr-namespace:AxAXVLC;assembly=AxInterop.AXVLC" 
    Title="HostingAxInWpfWithXaml" Height="400" Width="400" Loaded="Window_Loaded">

    <Grid Name="grid1">
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <WindowsFormsHost Name="wfh" Margin="0,0,0,23">
            <ax:AxVLCPlugin2 x:Name="axVLC"/>
        </WindowsFormsHost>
        <Button Height="23" HorizontalAlignment="Left" Name="play" VerticalAlignment="Bottom" Width="75" Click="play_Click">Play</Button>
    </Grid>
</Window>
