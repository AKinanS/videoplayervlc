<Window x:Class="VideoPlayer.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" 
    xmlns:ax="clr-namespace:AxAXVLC;assembly=AxInterop.AXVLC" 
    Title="HostingAxInWpfWithXaml" Height="335" Width="441" Loaded="Window_Loaded">

    <Grid Name="grid1">
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <WindowsFormsHost Name="wfh" Margin="0,0,0,23" Background="DarkSalmon">
            <ax:AxVLCPlugin2 x:Name="axVLC"/>
        </WindowsFormsHost>
        <Button Height="23" HorizontalAlignment="Left" Name="play" VerticalAlignment="Bottom" Width="75" Click="play_Click">Play</Button>
        <Button Height="23" HorizontalAlignment="Left" Margin="77,0,0,0" Name="stop" VerticalAlignment="Bottom" Width="75" Click="stop_Click">Stop</Button>
        <Button Height="23" Margin="154,0,0,0" Name="open" VerticalAlignment="Bottom" Click="open_Click" HorizontalAlignment="Left" Width="75">Open</Button>

        <Slider Height="23" HorizontalAlignment="Right" Name="volumeSlider" VerticalAlignment="Bottom" Width="100" Value="5" ValueChanged="volumeSlider_ValueChanged" />
        <Label Height="23" Margin="0,0,99,0" Name="label1" VerticalAlignment="Bottom" FlowDirection="RightToLeft" HorizontalAlignment="Right" Width="54">Volume</Label>
    </Grid>
</Window>
